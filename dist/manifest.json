{
  "manifest_version": 3,
  "name": "Simply Dark",
  "version": "1.0",
  "description": "A simple dark mode toggle extension",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "file:///*"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "commands": {
    "toggle-dark-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Toggle dark mode"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}